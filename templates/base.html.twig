<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Event Time{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

    <header class="p-1 bg-body-secondary">

        <nav class="navbar navbar-expand-lg justify-content-between w-75 m-auto">

            <div>
                <span class="fs-6">Event Time</span>
            </div>

            <div class="">
                <a class="text-dark-emphasis text-decoration-none px-2 mx-1 " href="{{ path( 'app_home' ) }}">Accueil</a>
                <a class="text-dark-emphasis text-decoration-none px-2 mx-1" href="{{ path( 'app_event' ) }}">Évènements</a>
                <a class="text-dark-emphasis text-decoration-none px-2 mx-1" href="{{ path( 'app_event_create' ) }}">Créer un évènement</a>
                <a class="text-dark-emphasis text-decoration-none px-2 mx-1" href="{{ path( 'app_hello' ) }}">Hello</a>
            </div>

        </nav>
    
    </header>

        {% block body %}{% endblock %}

    <footer class="w-100 position-absolute bottom-0 text-center p-1 bg-body-secondary">

        <p class="p-2">Event Time - Copyright - 2023</p>

    </footer>

    </body>
</html>
